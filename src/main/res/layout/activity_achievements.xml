<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/brand_black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_achievements"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/brand_text_primary" />

    <TextView
        android:id="@+id/tv_no_achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/label_no_achievements"
        android:textColor="@color/brand_text_primary"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list_achievements"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

</LinearLayout>
